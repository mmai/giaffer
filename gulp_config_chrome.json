{
    "platform": "chrome",
    "app"   : "src",
    "build" : "build_chrome",
    "dist"  : "dist_chrome",
    "test"  : "test",

    "paths" : {
        "scripts"   : [
            "src/+(chrome|lib|common)/**/*.js",
            "!src/+(chrome|lib|common)/**/*.spec.js"
        ],
        "templates" : [
            "src/chrome/**/*.tpl.html",
            "src/common/**/*.tpl.html"
        ],
        "sass"   : "src/+(sass|chrome|common)/**/*",
        "assets" : "src/assets/**",
        "html"   : "src/options.html",
        "tests"  : "src/+(chrome|common)/**/*.spec.js"
    },

    "vendor_files" : {
        "js": [
            "vendor/angular/angular.js",
            "vendor/jquery/dist/jquery.js",
            "vendor/angular-ui-router/release/angular-ui-router.js",
            "vendor/angular-florm/lib/angular-florm.js",
            "vendor/lodash/dist/lodash.js",
            "vendor/bootstrap/dist/js/bootstrap.js",
            "vendor/angular-bootstrap/ui-bootstrap-tpls.js"
        ],
        "css": [
        ],
        "assets": [
        ]
    },

    "copy_files": [
        "src/manifest.json",
        "src/popup.html",
        "src/options.html",
        "src/images/*",
        "src/_locales/**/*"
    ],

    "bootstrap": {
        "theme": "darkly",
        "path": "vendor/bootstrap/dist"
    }
}
